{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "~/*": ["src/*"] },
    "target": "ES6",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "exclude": ["**/.obsidian/**", "**/assets/data/scripts/**", "**/node_modules/**", "**/dist/**"]
}
